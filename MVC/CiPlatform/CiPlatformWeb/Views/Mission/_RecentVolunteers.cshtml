@{
    Layout = "";
    var volCount = ViewBag.volCount;
}

<!-- VOLUNTEER BOX -->
<div class="row skills-box border border-secondary mt-5">
    <div class="tabs d-flex flex-column" style="font-size: 15px;">
        <ul class="nav nav-tabs mt-3">
            <li class="nav-item">
                <a class="nav-link active disabled"
                   style="font-size: 22px;">Recent Volunteers</a>
            </li>
        </ul>


        <div class="row mt-3">
            @if (Model.RecentVolunteers.Count != 0)
            {
                <input type="hidden" id="volCount" value="@volCount" />

                @foreach (var v in Model.RecentVolunteers)
                {
                    <div class="col-4">
                        <div class="text-center">
                            @if (v.User.Avatar is not null)
                            {
                                <img src="~/Upload/UserProfile/@v.User.Avatar" alt="" class="rounded-circle vol-img">
                            }
                            else
                            {
                                <img src="~/Upload/UserProfile/no-avatar.jpg" alt="" class="rounded-circle vol-img">
                            }
                            <p>@v.User.FirstName @v.User.LastName</p>
                        </div>
                    </div>
                }
                <div class="d-flex border border-top volPagination justify-content-between align-items-center px-0" style="border-top-color: #857d7d !important;">
                    <div class="px-3">
                        <button class="border-none prev" id="prevBtn"><i class="bi bi-chevron-left"></i></button>
                    </div>
                    <div class="px-2 flex-grow-1 text-center border-start border-end" style="border-left-color: #857d7d !important; border-right-color: #857d7d !important;">
                        <span class="volText" style="font-size: 17px;">1 to 9 of 25</span>
                    </div>
                    <div class="px-3">
                        <button class="border-none next" id="nextBtn"><i class="bi bi-chevron-right"></i></button>
                    </div>
                </div>
            }
            else
            {
                <span class="mb-3 text-center" style="font-size: 25px;"> No recent volunteers </span>
            }
        </div>

    </div>
</div>