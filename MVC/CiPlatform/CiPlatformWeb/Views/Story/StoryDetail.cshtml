@model CiPlatformWeb.Entities.DataModels.Story

<link rel="stylesheet" href="~/css/story.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/slider.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
@*<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>*@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

<div class="container my-4">
    <div class="row d-flex mt-5">
        <div class="col-lg-6">
            <div style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff" class="swiper mySwiper2">
                <div class="swiper-wrapper">
                    @if (Model.StoryMedia.Any(s => s.StoryId == Model.StoryId))
                    {
                        @foreach (var image in Model.StoryMedia)
                        {
                            if (image.Type == "img")
                            {
                                <div class="swiper-slide">
                                    <img src="~/Upload/@image.Path" />
                                </div>
                            }
                        }
                    }
                    else
                    {
                        <img src="~/images/no-image-found.png" class="card-img-top" alt="" />
                    }
                </div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
            <div thumbsSlider="" class="swiper mySwiper">
                <div class="swiper-wrapper">
                    @if (Model.StoryMedia.Any(s => s.StoryId == Model.StoryId))
                    {
                        @foreach (var image in Model.StoryMedia)
                        {
                            if (image.Type == "img")
                            {
                                <div class="swiper-slide">
                                    <img src="~/Upload/@image.Path" />
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>

        <!-- DATA -->
        <div class="col-lg-6">

            <!-- USER IMAGE -->
            <div class="user-img mt-5">
                @if (Model.User.Avatar is not null)
                {
                    <img src="~/Upload/@Model.User.Avatar" alt="" class="rounded-circle"
                     style="width: 100px; height: 100px;">
                }
                else
                {
                    <img src="~/Upload/no-avatar.jpg" alt="" class="rounded-circle"
                     style="width: 100px; height: 100px;">
                }
            </div>

            <!-- USER NAME AND VIEWS -->
            <div class="d-flex justify-content-between mt-2 user-data">
                <div class="">@Model.User.FirstName @Model.User.LastName</div>
                <div class="border border-secondary rounded-pill px-3 py-1">
                    <i class="bi bi-eye"></i> &nbsp; 12,000 Views
                </div>
            </div>

            <div class="user-intro mt-4">
                <p style="font: 15px;">
                    @Model.User.WhyIVolunteer
                </p>
            </div>

            <div class="row gy-4 buttons mt-4">
                <div class="col-md-7">
                    <button class="rounded-pill recommend-btn p-2 w-100">
                        <i class="bi bi-person-plus"></i> &nbsp; Recommend to a Co-Worker
                    </button>
                </div>
                <div class="col-md-5">
                    <button class="rounded-pill mission-btn p-2 w-100">
                        Open Mission &nbsp; <i class="bi bi-arrow-right"></i>
                    </button>
                </div>
            </div>

        </div>

    </div>


    <div class="row">
        <div class="tabs d-flex flex-column" style="font-size: 15px;">
            <ul class="nav nav-tabs mt-3">
                <li class="nav-item">
                    <a class="nav-link active disabled" aria-current="page" href="#"
                       style="font-size: 22px;"> @Model.Title </a>
                </li>
            </ul>


            <div class="row mt-4">
                <p style="font: 15px;">
                    @Html.Raw(@Model.Description)
                </p>
            </div>

        </div>
    </div>
</div>

