@{
    string Email = ViewBag.Email;
    string UserName = ViewBag.UserName;
    string UserId = ViewBag.UserId;
    long Id = long.Parse(UserId);
}

@model CiPlatformWeb.Entities.ViewModels.DisplayMissionCards

@*<div class="partialViews">*@
<!-- GRID OR LIST -->
<!-- GRID PARTIAL -->
<div id="grid-view">
    <div class="container my-3 pb-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4 missions" id="missions">
            @foreach (var obj in Model.MissionList)
            {
                var RegisteredUsers = obj.MissionApplications.Count(m => m.ApprovalStatus.Contains("APPROVE"));
                var SeatsLeft = obj.TotalSeats - RegisteredUsers;

                <div class="col card-div mb-5">
                    <span class="d-none mission-country">@obj.CountryId</span>
                    <span class="mission-id">@obj.MissionId</span>
                    <div class="card h-100 shadow-sm border-light">
                        <div class="position-relative">
                            <img src="~/images/Grow-Trees-On-the-path-to-environment-sustainability-1.png"
                             class="card-img-top" alt="...">

                            <button class="me-2 btn bg-black bg-opacity-50 position-absolute top-0 end-0 p-2 rounded-pill text-decoration-none text-white">
                                <a class="text-decoration-none text-white">
                                    <img src="~/images/pin.png" alt="" class="img-fluid"> &nbsp;
                                    <span class="mission-city">@obj.City.Name</span>
                                </a>

                            </button>

                            @*@{
                                var flag = 1;
                            }
                            @foreach (var fm in obj.FavouriteMissions)
                            {
                                @if (fm.UserId.Equals(Id))
                                {
                                    <i class="bi bi-heart-fill favouriteButton filled-heart text-danger me-2 btn bg-black bg-opacity-50 position-absolute top-50 end-0 p-2 rounded-pill" data-mission-id="@obj.MissionId"></i>
                                    flag = 0;
                                }
                            }
                            @if (flag == 1)
                            {
                                <i class="bi bi-heart favouriteButton empty-heart text-light me-2 btn bg-black bg-opacity-50 position-absolute top-50 end-0 p-2 rounded-pill" data-mission-id="@obj.MissionId"></i>
                            }*@

                            <button class="me-2 btn bg-black bg-opacity-50 position-absolute top-50 end-0 p-2 rounded-pill" onclick="addToFavourites(@obj.MissionId)">
                                @if (obj.FavouriteMissions.Any(fm => fm.UserId == Id))
                                {
                                    <i class="bi bi-heart-fill text-danger @obj.MissionId" data-mission-id="@obj.MissionId"></i>
                                }
                                else
                                {
                                    <i class="bi bi-heart text-light @obj.MissionId" data-mission-id="@obj.MissionId"></i>
                                }
                            </button>

                            <button class="me-2 btn bg-black bg-opacity-50 position-absolute bottom-0 end-0 p-2 rounded-pill">
                                <a href="" class="text-decoration-none text-white">
                                    <img src="~/images/user.png" alt="" class="img-fluid">
                                </a>
                            </button>
                            <div class="position-absolute top-100 start-50 translate-middle bg-white rounded-pill px-3 py-2">
                                <span class="mission-theme">@obj.Theme.Title</span>
                            </div>
                        </div>

                        <div class="card-body pt-4">
                            <h4 class="card-title" id="card-title">@obj.Title</h4>
                            <p class="card-text">
                                @obj.ShortDescription
                            </p>

                            <div class="row d-flex seats-left">
                                <div class="col">
                                    <h6>
                                        @obj.OrganizationName
                                    </h6>
                                </div>
                                <div class="col text-end">
                                    <img src="~/images/selected-star.png" alt="">
                                    <img src="~/images/selected-star.png" alt="">
                                    <img src="~/images/selected-star.png" alt="">
                                    <img src="~/images/star.png" alt="">
                                    <img src="~/images/star.png" alt="">

                                    @*@obj.MissionRatings.Rating*@
                                </div>
                            </div>

                            <div class="row d-flex py-3 g-0 items-align-center">
                                <div class="col-2">
                                    <hr>
                                </div>
                                <div class="col-8 text-center border border-secondary rounded-pill">

                                    @if (obj.MissionType.Equals("Time"))
                                    {
                                        <span style="font-size: 15px;">From @obj.StartDate.Value.ToShortDateString() until @obj.EndDate.Value.ToShortDateString()</span>
                                    }
                                    @if (obj.MissionType.Equals("Goal"))
                                    {
                                        @foreach (var goal in obj.GoalMissions)
                                        {
                                            <span style="font-size: 15px;"> @goal.GoalObjectiveText </span>
                                        }
                                    }
                                </div>
                                <div class="col-2">
                                    <hr>
                                </div>
                            </div>

                            <div class="d-flex justify-content-around mt-1 seats-left">
                                <div class="d-flex align-items-center">
                                    <img src="~/images/Seats-left.png" alt=""
                                     style="margin-right: 10px; width: 30px; height: 30px" />
                                    <div class="d-flex flex-column">
                                        <span>@SeatsLeft</span>
                                        <span>Seats Left</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center">
                                    <img src="~/images/Seats-left.png" alt=""
                                     style="margin-right: 10px; width: 30px; height: 30px" />
                                    <div class="d-flex flex-column">
                                        <span>@obj.StartDate.Value.AddDays(-1).ToShortDateString() </span>
                                        <span>Deadline</span>
                                    </div>
                                </div>
                            </div>

                            <hr>
                            <div class="text-center">
                                <a class="btn-apply rounded-pill px-4 py-2 text-decoration-none" href="@Url.Action("VolunteeringMission", "Mission" , new { MissionId = @obj.MissionId})">
                                    Apply
                                    <i class="bi bi-arrow-right ms-3"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


