
@using CiPlatformWeb.Entities.ViewModels;
@model SessionUserViewModel

<footer class="bg-white border-top">
    <div class="container pt-3 pb-5">
        <div class="d-flex">
            <div class="">
                <a asp-action="PrivacyPolicy" asp-controller="User" class="text-decoration-none" style="color: #212529;">Privacy Policy</a>
            </div>
            <div class="ms-5">
                <button data-bs-toggle="modal" data-bs-target="#contactUs" class="border-none resetFormButton" style="color: #212529;">Contact Us</button>
                <!-- Modal -->
                <div class="modal fade" id="contactUs" tabindex="-1"
                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header border-none">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">
                                    Contact Us
                                </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <form class="resetForm">
                                <div class="modal-body py-1">
                                    <div class="form-group">
                                        <label class="form-label">Name*</label>
                                        <input type="text" value="@Model.userName" id="contactName" class="form-control" readonly>
                                    </div>

                                    <div class="form-group mt-3">
                                        <label class="form-label">Email*</label>
                                        <input type="text" value="@Model.emailId" id="contactEmail" class="form-control" readonly>
                                    </div>

                                    <div class="form-group mt-3">
                                        <label class="form-label">Subject<span class="required-field"></span></label>
                                        <input type="text" id="contactSubject" class="form-control" maxlength="255" placeholder="Enter your subject">
                                        <span class="valContactSubject text-danger errorMsg" style="display: none;">Subject is required.</span>
                                    </div>

                                    <div class="form-group mt-3">
                                        <label class="form-label">Message<span class="required-field"></span></label>
                                        <textarea id="contactMessage" class="form-control" maxlength="60000" placeholder="Enter your message" rows="4"></textarea>
                                        <span class="valContactMessage text-danger errorMsg" style="display: none;">Message is required.</span>
                                    </div>
                                </div>
                                <div class="modal-footer mt-2">
                                    <button type="button" class="cancel-btn rounded-pill py-1 px-3"
                                            data-bs-dismiss="modal">
                                        Cancel
                                    </button>
                                    <button type="button" id="submitContactForm"
                                            class="submit-btn rounded-pill py-1 px-3">
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ms-5">
                <a class="text-decoration-none" style="color: #212529;">Terms of Use</a>
            </div>
        </div>
    </div>
</footer>