@using System.Text.Json;
@using CiPlatformWeb.Entities.DataModels;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <script src="https://kit.fontawesome.com/0ae5aef6fc.js" crossorigin="anonymous"></script>



</head>
<body>
    <div class="navigation">
        <ul class="d-sm-block">
            <h3 class=" text-light mb-3 d-lg-block d-none text-center">NAVIGATION</h3>
            <li class="pb-3 mt-5">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminUser">
                    <i class="fa-solid fa-user px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">User</span>
                </a>
            </li>
            <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminCms">
                    <i class="fa-solid fa-file-lines px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">CMS Page</span>
                </a>
            </li>
            <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminMission">
                    <i class="fa-solid fa-regular fa-bullseye px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Mission</span>
                </a>
            </li>
            <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminTheme">
                    <i class="fa-solid fa-square px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Mission Theme</span>
                </a>
            </li>
            <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminSkill">
                    <i class="fa-solid fa-screwdriver-wrench px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Mission Skills</span>
                </a>
            </li>
            <li class="pb-3">
                <a class="d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminApplication">
                    <i class="fa-solid fa-folder px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Mission Application</span>
                </a>
            </li>
            <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminStory">
                    <i class="fa-solid fa-book px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Story</span>
                </a>
            </li>
            <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminBanner">
                    <i class="fa-solid fa-ribbon px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Banner Management</span>
                </a>
            </li>
           @* <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminComment">
                    <i class="fa-solid fa-comment px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Comments</span>
                </a>
            </li>*@
            <li class="pb-3">
                <a class=" d-flex align-items-center py-lg-2 ps-lg-1 pe-lg-5 p-0" asp-controller="Admin"
                   asp-action="AdminTimesheet">
                    <i class="fa-solid fa-table-list px-lg-3 py-lg-0 p-2"></i>
                    <span class="d-lg-block d-none pe-lg-3 ps-lg-0 py-lg-0 pe-2">Timesheets</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        @await Component.InvokeAsync("Session", new { view = "~/Views/Shared/_adminHeaderPartial.cshtml" })

        @RenderBody()
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.0/js/responsive.bootstrap5.min.js"></script>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>



    <!-- validate partial view form -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/tinymce@5/tinymce.min.js"></script>


    <script src="~/js/admin.js" asp-append-version="true"></script>

    <!-- for validations -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
