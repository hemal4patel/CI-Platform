@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_LayoutMission.cshtml";
}

<style>
    .sticky-top {
        position: static;
    }
</style>

@using CiPlatformWeb.Entities.DataModels
@using CiPlatformWeb.Entities.ViewModels
@model UserProfileViewModel

<div class="container Pcontainer">
    <h1 class="mt-3">Privacy and Cookies Policy</h1>
    <div class="row mt-4">
        <div class="col-md-3 d-md-block d-none">
            <div class="policyNavigation">
                @foreach (CmsPage page in Model.PolicyPages)
                {
                    <div class="p-2">
                        <a type="button" href="#@(page.Slug)" class="d-flex justify-content-between align-items-center text-decoration-none text-dark">
                            <span class="Pactive"> @(page.Title) </span>
                            <img src="~/images/arrow.png" class="" />
                        </a>
                    </div>
                }

            </div>
        </div>
        <div class="col col-md-9 col-sm-12" style="text-align: justify;">
            @foreach (CmsPage page in Model.PolicyPages)
            {
                <div id="@(page.Slug)">
                    <h2> @(page.Title) </h2>
                    <p> @(Html.Raw(page.Description))</p>
                    <hr />
                </div>
            }
        </div>
    </div>
</div>

