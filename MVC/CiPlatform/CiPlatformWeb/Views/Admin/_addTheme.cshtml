@using CiPlatformWeb.Entities.DataModels;
@using CiPlatformWeb.Entities.ViewModels;

@model CiPlatformWeb.Entities.ViewModels.AdminThemeViewModel


<form class="validateAdminForm" method="post" data-validation="true">

    <div class="card mx-3 my-5">
        <div class="card-header">
            <h3>Add Theme</h3>
        </div>
        <div class="card-body pb-5">
            <input type="text" class="d-none" id="themeId" asp-for="newTheme.themeId" />

            <div class="form-group mt-3">
                <label asp-for="newTheme.themeName" class="form-label">Theme Name<span class="required-field"></span></label>
                <input asp-for="newTheme.themeName" type="text" id="themeName" class="form-control">
                <span asp-validation-for="newTheme.themeName" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="newTheme.status" class="form-label">Status<span class="required-field"></span></label>
                <select asp-for="newTheme.status" id="status" class="form-select">
                    <option value="">Status</option>
                    <option value="1">Active</option>
                    <option value="0">In-Active</option>
                </select>
                <span asp-validation-for="newTheme.status" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end my-5 me-3">
        <button type="button" class="btn btn-outline-secondary rounded-pill cancel-btn">Cancel</button>
        <button asp-action="AdminTheme" type="submit" id="" class="btn mt-0 card-button ms-2 me-0 rounded-pill submit-btn">Submit</button>
    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script src="~/js/admin.js" asp-append-version="true"></script>