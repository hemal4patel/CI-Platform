@using CiPlatformWeb.Entities.DataModels;
@using CiPlatformWeb.Entities.ViewModels;
@{
    ViewData["Title"] = "Mission";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model CiPlatformWeb.Entities.ViewModels.AdminMissionViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/dataTables.bootstrap5.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.4.0/css/responsive.bootstrap5.min.css">

<div class="container-fluid px-4 adminMissionContainer">
    <div class="tabs d-flex flex-column" style="font-size: 15px;">
        <ul class="nav nav-tabs mt-3">
            <li class="nav-item">
                <a class="nav-link active disabled"
                   style="font-size: 22px;">Mission</a>
            </li>
        </ul>
    </div>

    <div class="my-3">

        <div class="my-4">
            <div class="options d-flex justify-content-between">
                <div class="">
                    <div class="input-group mb-3" style="width: 100%;">
                        <span class="input-group-text bg-white border-none" id="searchIcon">
                            <img src="~/images/search.png" />
                        </span>
                        <input type="text" class="form-control border-none" placeholder="Search" id="searchMission" aria-label="Search" style="border-left: none;" />
                    </div>
                </div>
                <div class="">
                    <button class="addBtn rounded-pill py-1 px-2 addMission">
                        <i class="bi bi-plus-lg"></i> &nbsp; Add
                    </button>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table" id="missionTable" style="border: 1px solid #D9D9D9;">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Mission Title</th>
                        <th scope="col">Mission Type</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (AdminMissionList mission in Model.missions)
                    {
                        <tr id="@mission.missionId">
                            <td scope="row">@mission.misssionTitle</td>
                            <td>@mission.missionType</td>
                            <td>@mission.startDate.Value.ToShortDateString()</td>
                            <td>@mission.endDate.Value.ToShortDateString()</td>
                            <td>
                                <i class="bi bi-pencil-square text-danger editMission"></i>
                                <i class="bi bi-trash3 ms-2 deleteMission"></i>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
