@using CiPlatformWeb.Entities.DataModels;
@using CiPlatformWeb.Entities.ViewModels;

@model CiPlatformWeb.Entities.ViewModels.AdminCmsViewModel


<form class="validateAdminForm" method="post" data-validation="true">

    <div class="card mx-3 my-5">
        <div class="card-header">
            <h3>Edit Cms Page</h3>
        </div>
        <div class="card-body pb-5">
            <input type="text" class="d-none" id="userId" asp-for="newCms.cmsId" />

            <div class="form-group mt-3">
                <label asp-for="newCms.title" class="form-label">Title<span class="required-field"></span></label>
                <input asp-for="newCms.title" type="text" id="title" class="form-control">
                <span asp-validation-for="newCms.title" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="newCms.description" class="form-label">Description<span class="required-field"></span></label>
<textarea asp-for="newCms.description" id="cmsDescription" name="editordata" class="form-control"></textarea>
                <span asp-validation-for="newCms.description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="newCms.slug" class="form-label">Slug<span class="required-field"></span></label>
                <input asp-for="newCms.slug" type="text" id="slug" class="form-control">
                <span asp-validation-for="newCms.slug" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="newCms.status" class="form-label">Status<span class="required-field"></span></label>
                <select asp-for="newCms.status" id="status" class="form-select">
                    <option value="">Status</option>
                    <option value="1">Active</option>
                    <option value="0">In-Active</option>
                </select>
                <span asp-validation-for="newCms.status" class="text-danger"></span>
            </div>

        </div>

    </div>
    <div class="d-flex justify-content-end my-5 me-3">
        <button type="button" class="btn btn-outline-secondary rounded-pill cancel-btn">Cancel</button>
        <button asp-action="AdminCms" type="submit" id="" class="btn mt-0 card-button ms-2 me-0 rounded-pill submit-btn">Submit</button>
    </div>
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

<script src="~/js/admin.js" asp-append-version="true"></script>